<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="PageItemContainerBorderStyle_" TargetType="Border">
		<Setter Property="Padding" Value="8" />
		<Setter Property="Background" Value="{StaticResource CardStrokeColorDefaultSolidBrush}" />
		<Setter Property="BorderBrush" Value="{StaticResource ControlElevationBorderBrush}" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="CornerRadius" Value="5" />
	</Style>

	<Style x:Key="FlyoutBorderStyle_" TargetType="Border">
		<Setter Property="Background" Value="{StaticResource SurfaceStrokeColorFlyoutBrush}" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="CornerRadius" Value="5" />
		<Setter Property="MaxWidth" Value="300" />
	</Style>
</ResourceDictionary>
